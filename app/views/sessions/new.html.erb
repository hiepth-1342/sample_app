<% provide :title, t("pages.login.title") %>
<div class="container h-100 px-3 py-5">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-9 col-md-6 col-lg-7 col-xl-6">
      <div class="card" style="border-radius: 15px;">
        <div class="card-body px-5 py-4">
          <h2 class="text-uppercase text-center mb-5"><%= "LOGIN" %></h2>
          <%= form_for :session, url: login_path do |f| %>
            <div data-mdb-input-init class="form-outline mb-4">
              <%= f.label :email, class: "form-label fw-bold" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div data-mdb-input-init class="form-outline mb-4">
              <%= f.label :password, class: "form-label fw-bold" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="row mb-4">
              <div class="col d-flex justify-content-begin">
                <div class="form-check">
                  <%= f.check_box class: "form-check-input", id: "form2Example31" %>
                  <%= f.label class: "form-check-label", for: "form2Example31" do %>
                    <%= t "pages.login.remember_me_label" %>
                  <% end %>
                </div>
              </div>
              <div class="col">
                <a href="#!"><%= t "pages.login.forgot_password" %></a>
              </div>
            </div>
            <%= f.submit t("pages.login.sign_in_btn"), class: "btn btn-primary btn-block mb-4", type: "submit", data: { "mdb-button-init": true, "mdb-ripple-init": true } %>
            <div class="text-center">
              <p><%= t("pages.login.not_member_question") %><%= link_to t("pages.login.register_btn"), signup_path %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

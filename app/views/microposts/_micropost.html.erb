<li id="micropost-<%= micropost.id %>" class="card m-2">
  <div class="row g-0">
    <div class="col-auto">
      <%= link_to gravatar_for(micropost.user, Settings.gravatar.size_80), micropost.user %>
    </div>
    <div class="col">
      <div class="card-body">
        <h5 class="card-title"><%= link_to micropost.user.name, micropost.user %></h5>
        <p class="card-text fw-bold"><%= micropost.content %></p>
        <% if micropost.image.attached? %>
          <%= image_tag micropost.image.variant(:display) %>
        <% end %>
        <p class="card-text timestamp">
          <i><%= t("pages.micropost.posted_ago", time_ago: time_ago_in_words(micropost.created_at)) %></i>
        </p>
        <% if current_user? micropost.user %>
          <%= link_to t("buttons.delete"), micropost, data: { "turbo-method": :delete, turbo_confirm: t("confirm.are_u_sure") } %>
        <% end %>
      </div>
    </div>
  </div>
</li>
